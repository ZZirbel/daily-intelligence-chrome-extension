{
  "manifest_version": 3,
  "name": "Daily Intelligence",
  "version": "1.0.1",
  "description": "Your personal intelligence hub for leadership development, continuous learning, and staying informed.",
  "author": "Zan Zirbel",

  "chrome_url_overrides": {
    "newtab": "daily-intelligence.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://api.groq.com/*",
    "https://*.techcrunch.com/*",
    "https://*.technologyreview.com/*",
    "https://*.theverge.com/*",
    "https://*.mit.edu/*",
    "https://*.google.com/*",
    "https://openai.com/*",
    "https://*.dowjones.io/*",
    "https://*.economist.com/*",
    "https://*.wharton.upenn.edu/*",
    "https://qz.com/*",
    "https://*.fastcompany.com/*",
    "https://*.seths.blog/*",
    "https://*.lollydaskal.com/*",
    "https://*.leadershipfreak.blog/*",
    "https://*.michaelhyatt.com/*",
    "https://*.simonsinek.com/*"
  ]
}
